{
  "capabilities":
      [
        {
          "browserName": "firefox",
          "maxInstances": 1,
          "seleniumProtocol": "WebDriver"
        },
        {
          "browserName": "chrome",
          "maxInstances": 0,
          "seleniumProtocol": "WebDriver"
        }
      ],
  "configuration":
  {
    "proxy": "org.openqa.grid.selenium.proxy.DefaultRemoteProxy",
    "maxSession": 8,
    "port": <%= @port %>,
    "host": <%= @node_url %>,
    "register": true,
    "registerCycle": 5000,
    "hubPort": 4444,
    "hubHost": <%= @hub_url %>
  }
}
